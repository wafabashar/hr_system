@model vmSingUp
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/Layout_Page.cshtml";
}

<h1>SignIn</h1>
@section body{ 

<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <form method="post">

                <div class="form-group">
                    <label class="control-label" asp-for="signUp.Name"></label>
                    <input class="form-control" asp-for="signUp.Name" />
                    <span asp-validation-for="signUp.Name"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="signUp.Email"></label>
                    <input class="form-control" asp-for="signUp.Email" />
                    <span asp-validation-for="signUp.Email"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="signUp.Passowrd"></label>
                    <input class="form-control" asp-for="signUp.Passowrd" />
                    <span asp-validation-for="signUp.Passowrd"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="signUp.ConfirmdPassword"></label>
                    <input class="form-control" asp-for="signUp.ConfirmdPassword" />
                    <span asp-validation-for="signUp.ConfirmdPassword"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="signUp.Role_id"></label>
                    <select class="form-control" asp-for="signUp.Role_id" asp-items='new SelectList(Model.liRole,"Id","Name")'></select>
                    <span asp-validation-for="signUp.Role_id"></span>
                </div>

                <input type="submit" class="btn btn-primary" value="Create" asp-action="Create_Account" />

            </form>

        </div>
    </div>
</div>
}
